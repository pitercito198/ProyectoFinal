@model Ventas.Models.Venta

<h2>Detalles de la Venta @Model.VentaId</h2>

<dl>
    <dt>Fecha:</dt>
    <dd>@Model.Fecha.ToShortDateString()</dd>
    <dt>Cliente:</dt>
    <dd>@Model.Cliente?.Nombre</dd>
    <dt>Total:</dt>
    <dd>@Model.Total.ToString("C")</dd>
    <dt>Detalles:</dt>
    <dd>
        <ul>
            @foreach (var detalle in Model.DetallesVenta)
            {
                <li>@detalle.Producto.Nombre x @detalle.Cantidad - Subtotal: @detalle.Subtotal.ToString("C")</li>
            }
        </ul>
    </dd>
</dl>