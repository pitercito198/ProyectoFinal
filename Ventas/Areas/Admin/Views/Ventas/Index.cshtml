@model IEnumerable<Ventas.Models.Venta>
@{
    ViewData["Title"] = "Ventas";
}

<h1>Lista de Ventas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Realizar Venta</a> @* Botón "Realizar Venta" *@
</p>

<table class="table">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venta in Model)
        {
            <tr>
                <td>@venta.Fecha.ToShortDateString()</td>
                <td>@venta.Cliente?.Nombre</td>
                <td>@venta.Total.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@venta.VentaId" class="btn btn-info btn-sm">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>